<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFDADBDD"
    tools:context="com.example.administrator.train.LoginActivity">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="用 户"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/withe"
         />
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱/手机号码/用户名"
        android:textColorHint="#FFD5CFCF"
        android:background="@color/withe"
        android:textSize="20sp"
        android:paddingStart="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/user_name" />

    <TextView
        android:id="@+id/password"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="密 码"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/withe"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="1dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:background="@color/withe"
        android:textSize="20sp"
        android:paddingStart="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/edit_name"
        android:layout_toRightOf="@+id/password" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:id="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:checked="false"
        android:textColor="#050404" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动登录"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/password"
        android:layout_toRightOf="@id/checkBox"
        android:layout_marginLeft="30dp"
        android:checked="false"
        android:textColor="#050404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码>"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_alignParentEnd="true"
        android:textColor="#050404" />
    >

   <Button
       android:id="@+id/login_btn"
       android:text=" 登录 "
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:background="@drawable/shape"
       android:textColor="#ffffff"
       android:layout_below="@+id/checkBox"
       android:layout_marginTop="20dp"
       />


   <Button
       android:id="@+id/register_btn"
       android:text=" 注册 "
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:background="@drawable/shape"
       android:textColor="#ffffff"
       android:layout_alignTop="@+id/login_btn"
       android:layout_alignEnd="@+id/textView" />


</RelativeLayout>
